<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="@string/email_content_bug"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorGreen"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="2000"
                android:lines="6"
                android:gravity="top|left"
                android:background="@color/colorWhite"
                android:id="@+id/bug_message"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email_page"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:layout_marginBottom="10dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/bug_grid_boletim"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_newspaper"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/bug_img_boletim"
                        android:tint="@color/colorAccent"
                        android:layout_column="0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_boletim"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/bug_txt_boletim"
                        android:textColor="@color/colorAccent"
                        android:layout_column="1"
                        android:layout_marginLeft="20dp"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bug_check_boletim"
                        android:buttonTint="@color/colorAccent"
                        android:foregroundTint="@color/colorAccent"
                        android:layout_gravity="right|center_vertical"
                        android:layout_column="2"/>

                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:layout_marginBottom="10dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/bug_grid_diarios"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_list"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/bug_img_diarios"
                        android:tint="@color/colorAccent"
                        android:layout_column="0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_diarios"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/bug_txt_diarios"
                        android:textColor="@color/colorAccent"
                        android:layout_column="1"
                        android:layout_marginLeft="20dp"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bug_check_diarios"
                        android:buttonTint="@color/colorAccent"
                        android:foregroundTint="@color/colorAccent"
                        android:layout_gravity="right|center_vertical"
                        android:layout_column="2"/>

                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:layout_marginBottom="10dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/bug_grid_horario"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_access_alarm_black_24dp"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/bug_img_horario"
                        android:tint="@color/colorAccent"
                        android:layout_column="0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_horario"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/bug_txt_horario"
                        android:textColor="@color/colorAccent"
                        android:layout_column="1"
                        android:layout_marginLeft="20dp"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bug_check_horario"
                        android:buttonTint="@color/colorAccent"
                        android:foregroundTint="@color/colorAccent"
                        android:layout_gravity="right|center_vertical"
                        android:layout_column="2"/>

                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:layout_marginBottom="10dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/bug_grid_outro"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_more_horiz_black_24dp"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/bug_img_outros"
                        android:tint="@color/colorAccent"
                        android:layout_column="0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_other"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/bug_txt_outros"
                        android:textColor="@color/colorAccent"
                        android:layout_column="1"
                        android:layout_marginLeft="20dp"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorAccent"
                        android:id="@+id/bug_check_outro"
                        android:foregroundTint="@color/colorAccent"
                        android:layout_gravity="right|center_vertical"
                        android:layout_column="2"/>

                </GridLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>