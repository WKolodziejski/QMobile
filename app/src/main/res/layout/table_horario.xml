<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tables_horario"
    android:orientation="vertical"
    android:elevation="5dp"
    android:background="@drawable/layout_bg_body"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/openViewHorario"
        >

        <ImageView
            android:layout_margin="16dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/openHorario"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_expand_less_black_24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:layout_marginRight="10dp"
            android:id="@+id/dia"
            android:textSize="@dimen/main_font_size"
            android:textStyle="bold"
            android:layout_marginEnd="10dp" />

    </LinearLayout>

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/expandable_layout_horario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:el_duration="250"
        app:el_expanded="true"
        app:el_parallax="0"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_horario_materias"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            />

    </net.cachapa.expandablelayout.ExpandableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/div_horario_down"/>

</LinearLayout>