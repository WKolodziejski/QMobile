<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@color/colorPrimaryLight"
    android:gravity="center_vertical"
    android:id="@+id/materiais_header"
    >

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        tools:srcCompat="@drawable/ic_file"
        android:id="@+id/materiais_tipo"
        android:background="@drawable/layout_bg_round"
        android:padding="12dp"
        android:tint="@color/colorPrimaryLight"
        tools:backgroundTint="@color/green" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_font_size"
            android:textStyle="bold"
            android:id="@+id/materiais_title"
            tools:text="Rev Industrial de 2046"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="@dimen/main_font_size"
            android:id="@+id/materiais_date"
            tools:text="11/06/2018"/>

    </LinearLayout>

</LinearLayout>