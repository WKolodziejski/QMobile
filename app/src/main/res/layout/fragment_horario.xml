<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.alamkanak.weekview.WeekView
        android:id="@+id/weekView_horario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:transitionName="Horario"
        app:numberOfVisibleDays="5"
        app:horizontalScrollingEnabled="false"
        app:horizontalFlingEnabled="false"
        app:eventCornerRadius="5dp"
        app:eventTextSize="12sp"
        app:hourHeight="60dp"
        app:headerRowPadding="12dp"
        app:columnGap="8dp"
        app:eventTextColor="@color/colorPrimaryLight"
        app:headerRowBackgroundColor="@color/white_dividers"
        app:dayBackgroundColor="@color/colorPrimaryLight"
        app:todayBackgroundColor="@color/blue_50" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>


