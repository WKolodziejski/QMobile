<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scroll_home"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/red_300"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:id="@+id/home_header"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/welcome_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:text="@string/home_hello"
                    android:textSize="@dimen/main_font_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/updated_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:text="@string/home_description_welcome"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/offline"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/ic_offline_pin_black_24dp"
                    android:tint="@color/colorAccent"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Offline"
                    android:textSize="12sp"
                    android:textAlignment="center"/>

            </LinearLayout>

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_margin="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/ic_access_alarm_black_24dp"
                        android:tint="@color/colorAccent"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Horario"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:textSize="@dimen/main_font_size" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        app:srcCompat="@drawable/ic_navigate_next_black_24dp"
                        android:tint="@color/colorAccent"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="8dp"
                    android:background="@color/black_dividers" />

                <com.qacademico.qacademico.Custom.Widget.CustomWeekView
                    android:id="@+id/weekView_home"
                    android:layout_width="match_parent"
                    android:layout_height="325dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="10dp"
                    app:eventCornerRadius="2dp"
                    app:eventTextColor="@color/white"
                    app:textSize="12sp"
                    app:hourHeight="60dp"
                    app:headerColumnPadding="8dp"
                    app:headerColumnTextColor="@color/colorAccent"
                    app:headerRowPadding="12dp"
                    app:xScrollingSpeed="0"
                    app:columnGap="8dp"
                    app:noOfVisibleDays="5"
                    app:headerRowBackgroundColor="@color/white_dividers"
                    app:dayBackgroundColor="@color/white_dividers"
                    app:todayBackgroundColor="@color/colorAccent"
                    app:headerColumnBackground="@color/white_dividers"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/recycler_shortcut"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CALENDARIO"
            android:id="@+id/calendario_abrir"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HORaRIo"
            android:id="@+id/horario_abrir"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/brown_400"
            android:id="@+id/recycler_home"/>

    </LinearLayout>

</ScrollView>
